/* pages/menberUpgrade/menberUpgrade.wxss */

page {
  background: #fff;
}

.diamond {
  width:16rpx;
  height: 16rpx;
  transform: rotate(45deg);
  border: solid 2rpx #3477f7;
  background-color: #ffffff;
  display: block;

}

.erCode {
  height: 688rpx;
  box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.3);
  background-image: linear-gradient(to bottom, #535353, #000);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 36rpx;
}

.erCode .content {
  width: 230px;
  height: 284px;
  border-radius: 15px;
  box-shadow: 0 5px 10px 0 rgba(224, 152, 92, 0.5);
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.erCode .title {
  font-size: 60rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #333;
  margin-top: 60rpx;
  margin-bottom: 62rpx;
}

.erCode image {
  width: 300rpx;
  height: 300rpx;
  /* border: 1rpx solid #ccc; */
}

.swiperContainer {
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
}

.swiperContainer {
  position: relative;
}

.swiperContainer swiper {
  max-height: 100rpx;
}

.line {
  width: 2rpx;
  height: 34rpx;
  background-color: #717171;
  display: inline-block;
  position: absolute;
  right: 0%;
}

/*用来包裹所有的小圆点 */

.dotscontainer {
  display: flex;
  position: relative;
  bottom: 20rpx;
  justify-content: center;
}

.dots {
  width: 300rpx;
  height: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

/*未选中时的小圆点样式 */

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #d8d8d8;
  margin: 0 4rpx;
}

/*选中以后的小圆点样式 */

.active {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #3477f7;
}

.swiperContainer swiper-item {
  width: 33.3333% !important;
  text-align: center;
  position: absolute;
  width: 100%;
  height: auto;
  transform: translate(200%, 0px) translateZ(0px);
  display: flex;
  align-content: center;
  justify-content: center;
  line-height: 34rpx;
  overflow: hidden;white-space: nowrap;text-overflow: ellipsis;
}

.swiperContainer swiper-item text.activeText {
  color: #3477f7;
  font-size: 32rpx;
  font-weight: 500;
 background: url(https://saler.ishangbin.com/img/sb-xiaozhan-img/titleBg.png);
background-repeat: no-repeat;
background-position-y: 56%;
background-size: contain;

}

.ruleContainer {
  margin-top: 0rpx;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
  padding: 40rpx;
}

.ruleContainer .content {
  border-radius: 20rpx;
  border: solid 2rpx #3477f7;
  background-color: #fff;
  position: relative;
}

.ruleContainer .textDetail {
  margin: 40rpx;
  margin-top: 68rpx;
}

.ruleContainer .textDetail .each {
  margin-bottom: 10rpx;
}

.ruleContainer .title {
  position: absolute;
  font-size: 36rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  letter-spacing: normal;
  text-align: center;
  color: #3477f7;
  width: 264rpx;
  height: 60rpx;
  border-radius: 33rpx;
  border: solid 2rpx #3477f7;
  background-color: #fff;
  line-height: 60rpx;
  left: 50%;
  margin-left: -132rpx;
  top: -30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ruleContainer .title .main{
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.iconNavContainer, .couponNavContainer {
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #000;
  padding: 0 40rpx;
}

.iconNavContainer .title, .couponNavContainer .title {
  text-align: left;
  font-size: 36rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.titleLine {
  background: linear-gradient(to bottom, #3477f7, #efefef);
  display: inline-block;
  width: 8rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.iconNavContainer .navs {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}

.iconNavContainer .navs .eachNav {
  width: 33.333%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 80rpx;
  text-align: center;
}

.iconNavContainer .navs .eachNav .icon {
  width: 80rpx;
  height: 80rpx;
  /* background-image: linear-gradient(to bottom, #797979, #000); */
  border-radius: 50%;
  margin-bottom: 8rpx;
}
.iconNavContainer .navs .eachNav .icon.ping{
background-image: linear-gradient(to bottom, #797979, #000);
font-size: 40rpx;
text-align: center;
font-weight: 500;
color: #fff;
line-height: 80rpx;
}

.iconNavContainer .navs .eachNav .smallText {
  font-size: 20rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #757575;
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.couponNavContainer .eachcoupon {
  height: 184rpx;
  border: solid 2rpx #ecc686;
  background-color: #fff8ec;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  /* overflow: hidden; */
}

.couponNavContainer .eachcoupon .circle {
  width: 15rpx;
  height: 30rpx;
  position: absolute;
  border: 2rpx solid #ecc686;
  background: #fff;
  margin-top: -15rpx;
  border-radius: 0 15rpx 15rpx 0;
}

.couponNavContainer .eachcoupon .circle.leftCircle {
  left: -2rpx;
  top: 50%;
  border-left-color: #fff;
}

.couponNavContainer .eachcoupon .circle.rightCircle {
  right: -2rpx;
  top: 50%;
  border-right-color: #fff;
  border-radius: 15rpx 0rpx 0rpx 15rpx;
}

.couponNavContainer .eachcoupon .top {
  display: flex;
  justify-content: space-between;
  height: 50%;
  align-items: center;
  border-bottom: dashed 1px #ecc686;
}

.couponNavContainer .eachcoupon .top .name {
  font-size: 40rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #f08d10;
  margin-left: 20rpx;
}

.couponNavContainer .eachcoupon .top .tag {
  font-size: 20rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #fff;
  height: 34rpx;
  border-radius: 6rpx;
  background-color: #e34732;
  padding: 4rpx;
  margin-left: 14rpx;
}

.couponNavContainer .eachcoupon  .rightBox {
  height: 100%;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
}

.couponNavContainer .eachcoupon  .rightBox text {
  display: inline-block;
  width: 126rpx;
  height: 44rpx;
  border-radius: 0 10rpx 0 10rpx;
  background-color: #ecc686;
}

.couponNavContainer .eachcoupon .bottom {
  font-size: 24rpx;
  text-align: left;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  height: 50%;
}

.couponNavContainer {
  padding-bottom: 60rpx;
}

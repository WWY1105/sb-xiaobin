.weui-vtabs {
    width: 100%;
    height: 100%;
    display: flex;
 background:#fff ;
}

.weui-vtabs-bar__wrp {
    width: 72px;
    height: 100%
}

.weui-vtabs-bar__scrollview {
    height: 100%;
    background: #f8f8f8;

}

.weui-vtabs-bar__content {
    width:72px;
    height: 100%
}

.weui-vtabs-bar__item {
    display: inline-block;
    width: 72px;
    height: 47px;
    /* background: #f8f8f8!important; */
}

.weui-vtabs-bar__title {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    white-space: nowrap;
    overflow: hidden
}

.weui-vtabs-content__wrp {
    overflow: hidden;
    flex: 1;
    padding-left: 12px;
    height: 100%;
    padding-bottom: 200rpx;

}

.weui-vtabs-content__scrollview {
    height: 100%
}

.weui-vtabs-content {
    height: 100%;
   
}
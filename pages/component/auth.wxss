/* pages/component/auth.wxss */
@import '../../iconfont/iconfont.wxss';

.modal {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0.7);
  z-index: 999;
}
.modal.authInfoModal{
   z-index: 999;
   position: relative;
}
.modal .content{
position: relative;
}
.modal .icon-close{
  position: fixed;
top: 9%;
right: 15%;
border-radius: 50%;
padding: 9rpx;
color: #fff;
font-size: 55rpx;


}

.modal image{
  width: 560rpx;
  position: absolute;
  left: -103rpx;
  right: 0;
  top: -35%;  
  bottom: 0;
  margin: auto;
}
.modal button{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  opacity: 0;
}
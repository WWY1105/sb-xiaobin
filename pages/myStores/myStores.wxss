/* pages/myStores/myStores.wxss */

.shopManage {
    margin-top: 60rpx;
    padding-left: 60rpx;
    padding-right: 60rpx;
 }
 
 .shopManage {
 }
 
 .shopManage .title {
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 26rpx;
    display: flex;
    justify-content: space-between;
 }
 
 .shopManage .title .left, .toMyStoreIncome .left {
    display: flex;
    align-items: center;
 }
 
 .shopManage .title .left .iconfont {
    margin-right: 17rpx;
 }
 .shopManage .title .right{
    width: 50%;
    width: 62%;
 display: flex;
 justify-content: space-between;
 
 }
 .shopManage .title .addBtn {
    width: 184rpx;
    height: 60rpx;
    border-radius: 40rpx;
    background-image: linear-gradient(to top, #4f8aff, #168bff);
    color: #fff;
    line-height: 60rpx;
    font-size: 28rpx;
    font-weight: 500;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
 }
 
 .shopManage .title .addBtn .addicon {
    font-size: 40rpx;
    margin-right: 5rpx;
 }
 
 .addstoreBox {
    border: dashed 1px #4f8fff;
    background-color: #fbfdff;
    padding: 50rpx 0;
    text-align: center;
    font-size: 32rpx;
    font-weight: 500;
    color: #bdbdbd;
 }
 
 .addstoreBox1 {
    height: 247rpx;
    line-height: 247rpx;
 }
 
 .addstoreBox .tips {
    margin-bottom: 30rpx;
 }
 
 .addstoreBox  .addBtn {
    font-size: 32rpx;
    font-weight: 500;
    letter-spacing: normal;
    text-align: center;
    color: #fff;
    width: 300rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20px;
    background-image: linear-gradient(to top, #4f8aff, #168bff);
    margin: 0 auto;
 }
 
 .addicon {
    font-size: 48rpx;
    margin-right: 10rpx;
 }
 
 .storeBox {
 }
 
 .storeBox .eachStore {
    width: 100%;
    height: 240rpx;
    /* opacity: 0.3; */
    border-radius: 10rpx;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
    /* background-color: #000; *//* padding: 36rpx 40rpx; */
    margin-bottom: 40rpx;
    position: relative;
    background-color: rgba(0,0,0,.5);
 }
 
 .storeBox .eachStore .bgimg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 240rpx;
    z-index: -1;
    border-radius: 10rpx;
 }
 
 .storeBox .eachStore .storeName {
    font-size: 36rpx;
    font-weight: 500;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #fff;
    left: 40rpx;
    position: absolute;
    top: 36rpx;
 }
 
 .storeBox .eachStore .storeAddress {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #b9b9b9;
    bottom: 40rpx;
    left: 40rpx;
    position: absolute;
 }
 
 .storeBox .eachStore .storeStatus {
    font-size: 20rpx;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #fff;
    margin-bottom: 8rpx;
    margin-left: 8rpx;
 }
 
 .storeBox .eachStore .storeStatus .circle {
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    background-color: #f28053;
    border-radius: 50%;
 }
 
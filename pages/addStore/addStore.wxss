/* pages/addStore/addStore.wxss */

page {
   color: #333;
}

.verticleFlex {
   display: flex;
   align-items: center;
   vertical-align: center;
   flex-direction: column;
   text-align: center;
   padding: 0 180rpx;
}

.shopInput {
   border-bottom: 2rpx solid #999;
   font-size: 80rpx;
   font-weight: 500;
   text-align: center;
   margin-top: 40rpx;
   margin-bottom: 6rpx;
   height: 112rpx;
   /* line-height: 1; */
   overflow: visible;
   min-height: 112rpx;
   max-width: 475px;
   width: 475rpx;
}

.title {
   font-family: PingFangSC;
   font-size: 36rpx;
   font-weight: normal;
   font-stretch: normal;
   font-style: normal;
   line-height: normal;
   letter-spacing: normal;
   text-align: center;
   color: #000;
   margin-top: 100rpx;
}

.redTips {
   font-family: PingFangSC;
   font-size: 24rpx;
   font-weight: normal;
   font-stretch: normal;
   font-style: normal;
   line-height: normal;
   letter-spacing: normal;
   color: #ff6060;
   
}

.submitBtn {
   width: 300rpx;
   height: 80rpx;
   line-height: 80rpx;
   border-radius: 40rpx;
   background-color: #eee;
   font-size: 32rpx;
   font-weight: 500;
   color: #fff;
   margin-top: 56rpx;
   background-image:none;
   pointer-events: none;
}
.submitBtn.active{
    background-image: linear-gradient(to left, #4f8aff 100%, #168bff 0%);
    pointer-events:all;
}

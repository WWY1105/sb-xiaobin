/* pages/menberUpgrade/menberUpgrade.wxss */

page {
  background: #fff;
}

.erCode {
  height: 688rpx;
  box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.3);
  background-image: linear-gradient(to bottom, #535353, #000);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 36rpx;
}

.erCode .content {
  width: 230px;
  height: 284px;
  border-radius: 15px;
  box-shadow: 0 5px 10px 0 rgba(224, 152, 92, 0.5);
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.erCode .title {
  font-size: 60rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #333;
  margin-top: 60rpx;
  margin-bottom: 62rpx;
}

.erCode image {
  width: 300rpx;
  height: 300rpx;
  /* border: 1rpx solid #ccc; */
}

.iconNavContainer, .couponNavContainer {
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #000;
  padding: 0 40rpx;
}

.iconNavContainer .title, .couponNavContainer .title {
  text-align: left;
  font-size: 36rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.midTitleContainer {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
}

.midTitleContainer  .bottom {
  font-size: 32rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #e34732;
  margin-bottom: 20rpx;
}

.titleLine {
  background: linear-gradient(to left, #3477f7, #efefef);
  display: inline-block;
  width: 40rpx;
  height: 8rpx;
  
}
.titleLine.leftLine{
margin-right: 20rpx;
}
.titleLine.rightLine {
  background: linear-gradient(to left, #efefef, #3477f7);
  margin-left: 20rpx;
}

.iconNavContainer .navs {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}

.iconNavContainer .navs .eachNav {
  width: 33.333%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 80rpx;
  text-align: center;
}

.iconNavContainer .navs .eachNav .icon {
  width: 80rpx;
  height: 80rpx;
  /* background-image: linear-gradient(to bottom, #797979, #000); */
  border-radius: 50%;
  margin-bottom: 8rpx;
}
.iconNavContainer .navs .eachNav .icon.ping{
background-image: linear-gradient(to bottom, #797979, #000);
font-size: 40rpx;
text-align: center;
font-weight: 500;
color: #fff;
line-height: 80rpx;
}
.iconNavContainer .navs .eachNav .smallText {
  font-size: 20rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #757575;
     text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.couponNavContainer .eachcoupon {
  height: 184rpx;
  border: solid 2rpx #ecc686;
  background-color: #fff8ec;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  /* overflow: hidden; */
}

.couponNavContainer .eachcoupon .circle {
  width: 15rpx;
  height: 30rpx;
  position: absolute;
  border: 2rpx solid #ecc686;
  background: #fff;
  margin-top: -15rpx;
  border-radius: 0 15rpx 15rpx 0;
}

.couponNavContainer .eachcoupon .circle.leftCircle {
  left: -2rpx;
  top: 50%;
  border-left-color: #fff;
}

.couponNavContainer .eachcoupon .circle.rightCircle {
  right: -2rpx;
  top: 50%;
  border-right-color: #fff;
  border-radius: 15rpx 0rpx 0rpx 15rpx;
}

.couponNavContainer .eachcoupon .top {
  display: flex;
  justify-content: space-between;
  height: 50%;
  align-items: center;
  border-bottom: dashed 1px #ecc686;
}

.couponNavContainer .eachcoupon .top .name {
  font-size: 40rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #f08d10;
  margin-left: 20rpx;
}

.couponNavContainer .eachcoupon .top .tag {
  font-size: 20rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #fff;
  height: 34rpx;
  border-radius: 6rpx;
  background-color: #e34732;
  padding: 4rpx;
  margin-left: 14rpx;
}

.couponNavContainer .eachcoupon  .rightBox {
  height: 100%;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
}

.couponNavContainer .eachcoupon  .rightBox text {
  display: inline-block;
  width: 126rpx;
  height: 44rpx;
  border-radius: 0 10rpx 0 10rpx;
  background-color: #ecc686;
}

.couponNavContainer .eachcoupon .bottom {
  font-size: 24rpx;
  text-align: left;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  height: 50%;
}

.couponNavContainer {
  padding-bottom: 60rpx;
}

/* pages/profitDetail/profitDetail.wxss */

.profitDetail {
}

.profitDetail .topBg {
  width: 100%;
  height: 450rpx;
  background-image: linear-gradient(to bottom, #338bff, #fff);
  padding-top: 60rpx;
  position: relative;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}

.shopName {
  font-size: 40rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #fff;
}

.brandName {
  font-size: 32rpx;
  text-align: center;
}

.content {
  width: 90%;
  background-color: #fff;
  position: absolute;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 10rpx 8rpx 0 rgba(0, 0, 0, 0.2);
  top: 200rpx;
  text-align: center;
  padding-top: 36rpx;
}

.content .smallTitle {
  font-family: PingFangSC;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: #919191;
}

.content .bigNum {
  font-size: 60rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  letter-spacing: normal;
  text-align: center;
  color: #e12020;
  margin-top: 4rpx;
  line-height: 84rpx;
}

.content .tag {
  border-radius: 6rpx;
  border: solid 1px #13c228;
  font-size: 20rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  letter-spacing: normal;
  text-align: center;
  color: #13c228;
  /* width: 60rpx;
  height: 28rpx; */
  line-height: 28rpx;
  margin: 0 auto;
  padding: 3rpx 10rpx;
  width: auto;

}
.tag1 {
  color: #ff2020;
  border-color: #ff2020;
}


.content  .listBox .line {
  width: 100%;
  border: solid 1rpx #ededed;
  margin: 0 auto;
  margin-top: 40rpx;
}

.content  .listBox {
  padding: 0 60rpx;
  position: relative;
  padding-bottom: 50rpx;
}

.content  .listBox .content_bg {
  position: absolute;
  left: 0;
  bottom: -40rpx;
  height: 40rpx;
  width: 100%;
}

.content  .list {
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  /* padding-left: 30px;
  padding-right: 30px; */
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.content  .list  .left, .content  .list  .right {
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #919191;
}

.content  .list  .right {
  color: #000;
  font-weight: 500;
  max-width: 80%;
  text-align: right;
}

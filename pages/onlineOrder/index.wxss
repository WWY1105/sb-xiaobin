/* pages/onlineOrder/index.wxss */

page {
   background-color: #f7f7f7;
   color: #333;
   padding: 0 40rpx;
   box-sizing: border-box;
   height: 100%;
}

.bottomBtn {
   position: fixed;
   width: 100%;
   height: 100rpx;
   line-height: 100rpx;
   color: #228bff;
   font-size: 36rpx;
   font-weight: bold;
   border-top: 1rpx solid #228bff;
   text-align: center;
   bottom: 0;
   box-sizing: border-box;
   left: 0;
}

.bottomBtn .btn {
   text-align: center;
   width: 50%;
}

.bottomBtn .btn.left {
   border-right: 1rpx solid #228bff;
}

.containerBox {
   height: 100%;
}

.main {
   width: 670rpx;
   background-repeat: no-repeat;
   background-image: url(https://saler.ishangbin.com/img/sb-xiaozhan-img/onlineOrder/indexBgleft.png);
   background-size: 100% 100%;
   height: 706rpx;
   margin-top: -92rpx;
}

.rightIcon {
   font-size: 20rpx;
   color: #c9c9c9;
   margin-left: 14rpx;
}

.topBox {
   padding-bottom: 30rpx;
   font-size: 32rpx;
   padding-top: 30rpx;
}

.topBox .active {
   font-weight: bold;
}

.topBox .right, .topBox .bg {
   width: 50%;
   text-align: center;
}

.main .content {
   padding: 20rpx 40rpx;
   box-sizing: border-box;
   padding-top: 0;
}

.submitBtn {
   width: 100%;
   height: 92rpx;
   border-radius: 10rpx;
   background-color: #228bff;
   color: #fff;
   line-height: 92rpx;
   text-align: center;
}

.pickerBox {
   padding: 30rpx 0;
   /* border-top: solid 2rpx #ededed; */
   border-bottom: solid 2rpx #ededed;
   margin-top: 45rpx;
}

.pickerBox .time {
   flex: 1;
   text-align: right;
}

.pickerBox2 {
   margin-bottom: 190rpx;
   margin-top: 0;
   border-bottom: solid 2rpx #ededed;
}

.pickerBox .section__title {
   font-size: 32rpx;
   font-weight: bold;
   color: #000;
}

.picker {
   justify-content: flex-end;
}

.pickerBox picker {
   flex: 1;
   text-align: right;
   color: #228bff;
   font-size: 32rpx;
}

/* ---------------------------- */

/*模态框*/

/*模态框*/

.modals {
   position: fixed;
   z-index: 999;
   top: 0;
   left: 0;
   right: 0;
   bottom: 0;
}

.modals-cancel {
   position: absolute;
   z-index: 1000;
   top: 0;
   left: 0;
   right: 0;
   bottom: 0;
   background-color: rgba(0, 0, 0, 0.5);
}

.bottom-dialog-body {
   position: absolute;
   z-index: 10001;
   bottom: 0;
   left: 0;
   right: 0;
   padding: 30rpx;
   height: 676rpx;
   background-color: #fff;
}

/*动画前初始位置*/

.bottom-pos {
   -webkit-transform: translateY(100%);
   transform: translateY(100%);
   border-radius: 20rpx 20rpx 0 0;
   padding: 0;
}

/* modals---end */

/* 时间选择 */

.time-title {
   font-family: PingFangSC;
   font-weight: 600;
   color: rgba(50, 50, 50, 1);
   font-size: 32rpx;
   margin: 40rpx 20rpx 20rpx 20rpx;
}

.select-date {
   height: 672rpx;
   overflow: hidden;
}

.select-day {
   float: left;
   width: 300rpx;
   height: 556rpx;
}

.day {
   font-size: 30rpx;
   height: 100rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   background: rgba(239, 239, 239, 1);
}

.day.active {
   background-color: #fff;
}

.select-time {
   height: 100%;
   margin-left: 330rpx;
   background-color: #fff;
   overflow-y: auto;
}

.select-time-item {
   padding: 30rpx 36rpx;
   width: 314rpx;
   height: 42rpx;
   border-radius: 18rpx;
   border: 2px solid rgba(151, 151, 151, 1);
   font-size: 30rpx;
   margin-bottom: 30rpx;
}

.select-time-item.select {
   color: #ff4a00;
}

i {
   float: right;
   font-size: 30rpx;
   color: #ff4a00;
   margin-top: 26rpx;
}

/* 时间选择--end */

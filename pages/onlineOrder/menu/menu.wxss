/* pages/onlineOrder/menu/menu.wxss */

page {

   color: #000;
   height: 100%;
}

.noData {
   display: flex;
   align-items: center;
   justify-content: center;
   width: 100%;
   height: 100%;
}
.noDataImg {
   width: 327rpx;
   height: 360rpx;
   margin-top: -20%;
}

.containerBox,
.content {
   height: 100%;
}

.lastDish {
   height: 200rpx;
}

.eachCate {
   padding: 24rpx;
   font-size: 24rpx;
}

.eachCate.active {
   background-color: #fff;
}

.dishs {
   background-color: #fff;
   flex: 1;
   height: 100%;
   /* padding: 20rpx 24rpx; */
   padding-left: 168rpx;
}

.dishsModal {
   padding-left: 24rpx;
   padding-top: 20rpx;

}

.menuBox .title {
   font-size: 24rpx;
   margin-bottom: 24rpx;
}

.menuBox .eachDish {
   margin-bottom: 40rpx;
}

.menuBox .eachDish .numBox .num {
   color: #000;
   font-weight: bold;
   margin-left: 30rpx;
   margin-right: 30rpx;
}

.menuBox .eachDish .numBox .jia {
   font-size: 50rpx;
   color: #4f8aff;
   max-height: 40rpx;
}

.menuBox .eachDish .numBox .jian {
   color: #979797;
   font-size: 50rpx;
   max-height: 40rpx;
   line-height: 40rpx;
}

.menuBox .eachDish .disImg {
   width: 168rpx;
   height: 168rpx;
   border-radius: 2rpx;
   background-color: #d8d8d8;
   margin-right: 22rpx;
}

.menuBox .eachDish .textBox {
   flex: 1;
   justify-content: space-between;
   height: 168rpx;
}

.menuBox .eachDish .textBox .name {
   font-size: 24rpx;
   font-weight: bold;
}

.menuBox .eachDish .textBox .desc {
   color: #919191;
   font-size: 20rpx;
}

.menuBox .eachDish .textBox .price {
   font-size: 32rpx;
   font-weight: bold;
   color: #e35f4e;
   display: flex;
   justify-content: flex-start;
   align-items: flex-end;

}
.menuBox .eachDish .textBox .price .origin{
   font-size:24rpx;
   color: #919191;
   text-decoration: line-through;
}
.menuBox .eachDish .textBox .choose {
   width: 124rpx;
   height: 40rpx;
   border-radius: 20rpx;
   background-color: #4f8aff;
   font-size: 28rpx;
   color: #fff;
   text-align: center;
   line-height: 40rpx;
}

.menuBox .eachDish .textBox .price .icon {
   font-size: 20rpx;
}

/* 选好了 */

.totalBox {
   position: fixed;
   padding: 0 26rpx;
   margin: 0 auto;
   left: 0;
   right: 0;
   bottom: 10%;
   z-index: 1001;
}

.totalBox .left {
   background-color: #000;
   color: #fff;
   height: 100%;
   padding: 0rpx 40rpx;
   border-radius: 46rpx 0 0 46rpx;
   /* padding-right: 156rpx; */
   flex: 1;
   height: 92rpx;

}

.totalBox .doneBtn {
   border-radius: 0 46rpx 46rpx 0;
   background-color: #228bff;
   text-align: center;
   width: 180rpx;
   color: #fff;
   line-height: 98rpx;
   height: 98rpx;
   font-size: 36rpx;
   font-weight: 500;
   line-height: 92rpx;
   height: 92rpx;

}

.totalBox .left .icon {
   position: relative;
}

.totalBox .left .icon .tag {
   position: absolute;
   width: 36rpx;
   height: 36rpx;
   background-color: #ec2121;
   display: inline-block;
   text-align: center;
   line-height: 36rpx;
   color: #fff;
   border-radius: 50%;
   top: -25rpx;
   right: 15rpx;
}

.totalBox .left .iconfont {
   font-size: 50rpx;
   color: #fff;
   margin-right: 54rpx;
}

.totalBox .left .price {
   font-size: 36rpx;
   font-weight: bold;
}

.totalBox .left .price .logo {
   font-size: 28rpx;
   font-weight: 400;
}

.totalBox .left .tips {
   font-size: 20rpx;
   font-weight: bold;
   color: #919191;
   margin-left: 10rpx;
}



